            //        OnDetailClick2(row);
            //        break;
            //    case SharedProperties.BookTypes.Copy:
            //        var bookCopy = row as BookCopyDTO;
            //        //OnDetailClick.InvokeAsync(bookCopy);
            //        OnDetailClick2(row);
            //        break;
            //    default:
            //        break;
            //}

            OnDetailClick2(row);
        }

    }

    private void UIUpdated()
    {
        base.StateHasChanged();
    }
}
